<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this chat from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%if user_signed_in? %>
        <p>
        <strong>User Name: </strong>
        <%= current_user.username %>
        <%= f.hidden_field :from_id , class: "form-control", value: current_user.id %>
        <%= f.hidden_field :username , class: "form-control", value: current_user.username %>
        </p>
      <%else%>
        <div class="form-group">
          <p>
          <strong>First Name: </strong>
          <%= f.text_field :firstname , class: "form-control" %>
          </p>
        </div>
        <div class="form-group">
          <p>
          <strong>Last Name: </strong>
          <%= f.text_field :lastname, class: "form-control" %>
          </p>
        </div>
        <div class="form-group">
          <p>
          <strong>e-mail</strong>
          <%= f.email_field :email, class: "form-control" %>
          </p>
        </div>
      <%end%>
      <div class="form-group">
        <p>
        <strong>Subject: </strong>
        <%= f.text_field :subject, class: "form-control" %>
        </p>
      </div>
    </div>
  </div>
  <div class="form-group">
    <h3>Message</h3>
    <p>
    <%= f.text_area :message, class: "form-control" %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
