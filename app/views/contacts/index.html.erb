<% content_for :title do %>
  Contact Requests Page
<% end %>
<% @contacts.each do |contact| %>
  <div class="row well">
    <%if contact.from_id.nil?%>
      <div class="col-md-10">
        <%= link_to contact do %>
          <p>
          <strong>First Name: </strong>
          <%= contact.firstname %>
          </p>
          <p>
          <strong>Last Name: </strong>
          <%= contact.lastname %>
          </p>
          <p>
          <strong>E-mail: </strong>
          <%= contact.email %>
          </p>
          <p>
          <strong>Subject: </strong>
          <%= contact.subject %>
          </p>
        <%end%>
      </div>
      <div class="col-md-2">
        <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% else %>
      <div class="col-md-10">
        <%= link_to contact do %>
          <p>
          <strong>Username: </strong>
          <%= contact.username %>
          </p>
          <p>
          <p>
          <strong>Subject: </strong>
          <%= contact.subject %>
          </p>
        <%end%>
      </div>
      <div class="col-md-2">
        <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <%end%>
  </div>
<%end%>
