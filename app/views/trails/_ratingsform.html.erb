<%= f.fields_for :ratings, @rating do |rate| %>
  <div class="form-group" >
    <%= rate.label :difficulty %>
    <div class="input-group">
      <span class="input-group-addon">
        <div class="row">
        <%= rate.radio_button :difficulty, 1 %>
        <%= label_tag :difficulty, '1', :value => 1 %>
        <%= rate.radio_button :difficulty, 2 %>
        <%= label_tag :difficulty, '2', :value => 2 %>
        <%= rate.radio_button :difficulty, 3 %>
        <%= label_tag :difficulty, '3', :value => 3 %>
        <%= rate.radio_button :difficulty, 4 %>
        <%= label_tag :difficulty, '4', :value => 4 %>
        <%= rate.radio_button :difficulty, 5 %>
        <%= label_tag :difficulty, '5', :value => 5 %>
      </div>
      </span>
    </div>
  </div>
  <div class="form-group" >
    <%= rate.label :durationinsec %>
    <%= rate.number_field :durationinsec, class: "form-control" %>
  </div>
  <div class="form-group" >
    <%= rate.label :favoutite %>
    <%= rate.check_box :favourite, class: "form-control" %>
  </div>
<% end %>
