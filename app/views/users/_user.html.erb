<div class="well">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag user.gravatar_url(size: 100) %>
    </div>
    <div class="col-md-8">
      <p>
      <strong>Username: </strong>
      <%= user.username %>
      </p>
      <p>
      <strong>Points: </strong>
      <%= user.points %>
      </p>
      <%if user_signed_in? && current_user.admin? %>
          <%unless user.admin?%>
            <%= link_to "Promote to Admin", controller: "actions", action: "promote_to_admin", id: user.id, method: :patch, class: "btn btn-primary" %>
          <%end%>
          <%if user.trailblazer?%>
            <%= link_to "Demote from Trailblazer", controller: "actions", action: "demote_from_admin", id: user.id, method: :patch, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Promote to Trailblazer", controller: "actions", action: "promote_to_trailblazer", id: user.id, class: "btn btn-primary" %>
          <%end%>
          <%if current_user.owner? && user.admin?%>
            <%= link_to "Demote from Admin", controller: "actions", action: "demote_from_admin", id: user.id, class: "btn btn-primary" %>
          <%end%>
      <% end %>
    </div>
  </div>
</div>
