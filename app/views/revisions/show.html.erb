<% content_for :title do %>
  Trail Revision Page
<% end %>
<p id="notice"><%= notice %></p>
<div class="well">
  <p>Please go through the revision. You may edit the trail then re-submit for review once finished.</p>
</div>
<div class="row">
  <div class="col-md-4">
    <h3>Trail Details</h3>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <h3>Revisied Trail Details</h3>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>Trail Name: </strong>
    <%= @trail.name %>
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <p>
    <%= @revision.name %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>Location: </strong>
    <%= @trail.location %>
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <p>
    <%= @revision.location %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>Season: </strong>
    <%= @trail.season %>
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <p>
    <%= @revision.season %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>Type: </strong>
    <%= @trail.trailtype %>
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <p>
    <%= @revision.trailtype %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>Length: </strong>
    <%= @trail.length %>
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <p>
    <%= @revision.length %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>GPS: </strong>
    lat: <%= @trail.latitude %>, long: <%= @trail.longitude %>
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <p>
    lat: <%= @revision.latitude %>, long: <%= @revision.longitude %>
    </p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <p>
    <strong>Trail Directions/Description</strong>
    <%= @trail.traildirections %>  
    </p>
  </div>
  <div class="col-md-5 col-md-offset-3">
    <%= @revision.traildirections %>
  </div>
</div>
<%= link_to 'Make Review', controller: "revisionreviews", action: "new", revision_id: @revision.id, class: "btn btn-primary" %><br><br>
<%= link_to 'Accept Revision', controller: "actions", action: "set_trail_to_revision", revision_id: @revision.id, class: "btn btn-primary" %>
