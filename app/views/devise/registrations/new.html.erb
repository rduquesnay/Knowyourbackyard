<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, html: {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, html: {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", html: {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", html: {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname , html: {class: "form-control"}%>
  </div>
  <div class="form-group">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, html: {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :country %><br />
    <%= f.text_field :country, html: {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, html: {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :province %><br />
    <%= f.text_field :province, html: {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :about %><br />
    <%= f.text_field :about, html: {class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
