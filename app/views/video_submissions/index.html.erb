<h1>Listing video submissions</h1>
<div class="row">
  <div class="col-md-1">
    <strong>Trail</strong>
  </div>
  <div class="col-md-3">
    <strong>Link to Video</strong>
  </div>
</div>
<% @video_submissions.each do |video_submission| %>
  <div class="row">
    <div class="col-md-1">
      <%= link_to video_submission.trail do %>
        <%= video_submission.trail.name %>
      <%end%>
    </div>
    <div class="col-md-3">
      <%= link_to extlink(video_submission.demo_link) %>
    </div>
    <div class="col-md-1">
        <%= link_to 'Show', video_submission %>
    </div>
    <div class="col-md-1">
        <%= link_to 'Destroy', video_submission, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<%end%>
